            <textarea placeholder="我来说两句"></textarea>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $(".huodx_xq_fq").click(function () {
                var a = $(this).attr("data-data");
                if (a == 0) {
                    $(".huod_nr_inex").addClass("hei_auto");
                    $('html,body').animate({ scrollTop: '280px' }, 300);
                    $("huodx_xq_fq>p:first").text("收起详情")
                    $(this).attr("data-data", "1");
                    $(this).find("span").attr("class", "glyphicon glyphicon-menu-up")
                }
                else {
                    $(".huod_nr_inex").removeClass("hei_auto");
                    $("huodx_xq_fq>p:first").text("展开详情")
                    $(this).attr("data-data", "0");
                    $(this).find("span").attr("class", "glyphicon glyphicon-menu-down")
                }

            })

            //回复
            $("#huo_hifu").click(function () {
                $(".huod_xq_pingl").slideDown();
            })
            $("#huifu_xq").click(function () {
                $(".huod_xq_pingl").slideUp();
            })
            //点赞

            $("#huo_z").click(function () {

                $(this).children("b").addClass("mo_re")
                var a = parseInt($(this).children("em").attr("data-data")) + 1;
                $(this).children("em").text("(" + a + ")");
            })

            //评论点咱
            $(".pingl_dz").click(function () {
                $(this).children("b").addClass("mo_re");
                $(this).addClass("mo_re")
                var a = parseInt($(this).attr("data-data")) + 1;
                var b = '<b class="glyphicon glyphicon-thumbs-up mo_re"></b>';
                $(this).html(b+a);
            })
        })
    </script>
