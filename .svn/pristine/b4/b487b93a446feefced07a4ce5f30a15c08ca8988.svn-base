.zhaomu_index {
    background: url(../images/zhaomu_bg.png) repeat-y;
    background-size: 100% auto;
    padding:10px;
}

.zhaomuxiao {
    margin-top:10px;
    padding: 15px 10px;
    border-radius: 5px;
    margin-bottom:25px;
    position:relative;
    padding-bottom:25px;
}

    .zhaomuxiao span, .zhaomuxiao em, .zhaomuxiao p {
        font-weight: bold;
        font-size: 0.9rem;
    }

    .zhaomuxiao p {
        text-align: justify;
        margin-top: 5px;
    }
     .zhaomuxiao span {
        margin-right: 5px;
    }
    .zhaomuxiao span + span {
        margin-right: 0px;
    }

    .zhaomuxiao span > em {
        margin-left: 2px;
    }

.zhu_nan {
    background: #23E7D9;
}

    .zhu_nan span, .zhu_nan em, .zhu_nan p {
        color: #0A6E64;
    }

.zhu_nv {
    background: #02B3F6;
}

    .zhu_nv span, .zhu_nv em, .zhu_nv p {
        color: #016D9B;
    }

.zhu_pei {
    background: #FF679A;
}

    .zhu_pei span, .zhu_pei em, .zhu_pei p {
        color: #A0093C;
    }

.zhu_fax {
    background: #27192A;
}

    .zhu_fax span, .zhu_fax em, .zhu_fax p {
        color: #A466B1;
    }
    .zhaomu_img{
       position:absolute;
       top:-14px;
       left:30px;
       height:26px;
       width:auto;
    }
    .zhaomu_dianhu>p{
        font-size:0.9rem;
