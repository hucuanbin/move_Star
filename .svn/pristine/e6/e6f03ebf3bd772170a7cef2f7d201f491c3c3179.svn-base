<body>
    <script src="js/bootstrap.js"></script>
    <div class="container-fluid nr_top_1">
        <a href="wode.html" class="glyphicon glyphicon-menu-left "></a>
        <b class="text-center">修改姓名</b>
    </div>
    <div class="container-fluid zil_xiug p10">
        <div class="xiug_input">
            <input id="nicheng" value="肉包子" class="inpt_show" data-data="肉包子" />
            <button class="botn_quan">保存</button>
        </div>
    </div>
    <script>
        $("#nicheng").focus(function () {
            $(this).val("");
        });
        $("#nicheng").blur(function () {
            if ($(this).val() == "") {
                $(this).val( $(this).attr("data-data"));
            }
        });
    </script>
</body>
